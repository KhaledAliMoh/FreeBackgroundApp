<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/image_view_in_list"
        android:src="@drawable/profile"
        android:adjustViewBounds="true"
        android:baselineAlignBottom="false"
        android:clickable="false"
        android:scaleType="centerCrop"
        android:theme="@android:style/TextAppearance.DeviceDefault.Small.Inverse"
        android:layout_weight="1.05" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description_text_view_id"
        android:text="This is a profile picture of Khaled Ali Moh"
        android:textStyle="bold|italic"
        android:textSize="19dp"
        android:textColor="@android:color/darker_gray"
        android:shadowColor="#f02626" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/favourite_button"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/unliked_image"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/comment_button"
            android:src="@drawable/comment_image"/>

        <ImageButton
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:id="@+id/download_button"
            android:src="@drawable/download_image"
            android:layout_gravity="right"
            android:layout_marginLeft="100dp"/>
    </LinearLayout>

</LinearLayout>